{
  "name": "app",
  "private": true,
  "devDependencies": {
    "chokidar": "^5.0.0",
    "esbuild": "^0.27.2"
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:css:compile": "sass ./app/assets/stylesheets/application.bootstrap.scss:./app/assets/builds/application.css --quiet-deps --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/application.css --use=autoprefixer --output=./app/assets/builds/application.css",
    "build:css": "yarn build:css:compile && yarn build:css:prefix",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:css\"",
    "capture:screenshot": "node script/capture_portfolio_screenshot.mjs"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.23",
    "@popperjs/core": "^2.11.8",
    "autoprefixer": "^10.4.24",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "nodemon": "^3.1.11",
    "playwright": "^1.50.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.97.3"
  },
  "browserslist": [
    "defaults"
  ]
}
