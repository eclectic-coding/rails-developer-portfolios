<% if portfolios.present? %>
  <div class="row g-4">
    <% portfolios.each do |portfolio| %>
      <div class="col-sm-6 col-md-4 col-lg-3">
        <%= render 'card', portfolio: portfolio %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="alert alert-info text-center">
    <h4>No portfolios data available yet</h4>
    <p>The data will be fetched automatically. You can also run: <code>rails portfolios:fetch</code></p>
  </div>
<% end %>

